<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/float_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    android:background="@drawable/shape_floating_window_bg"
    android:gravity="center_vertical"
    tools:ignore="HardcodedText"
    tools:backgroundTint="@color/warning_red">

    <LinearLayout
        android:id="@+id/layout_left_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginEnd="3dp"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/iv_left_exit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="run or stop"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            android:tint="@android:color/black"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/iv_left_run_stop"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="exit"
            android:src="@drawable/selector_run_stop_icon"
            android:tint="@android:color/black"
            tools:ignore="UseAppTint" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_sharingan_animated_vector"
        android:contentDescription="TODO" />

    <LinearLayout
        android:id="@+id/layout_right_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginStart="3dp"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_right_run_stop"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="run or stop"
            android:src="@drawable/selector_run_stop_icon"
            android:tint="@android:color/black"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/iv_right_exit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="exit"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            android:tint="@android:color/black"
            tools:ignore="UseAppTint" />

    </LinearLayout>
</LinearLayout>